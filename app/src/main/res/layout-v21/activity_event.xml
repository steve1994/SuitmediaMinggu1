<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.steve.tessuitmediaandroid.EventActivity">

    <Toolbar
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:id="@+id/toolBarEvent">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_back_article_normal"
            android:id="@+id/backArticleButton"
            android:layout_alignLeft="@+id/listEvent"
            android:onClick="onBackArticleClick" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_new_media_article_normal"
            android:id="@+id/newArticleButton"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/listEvent"
            android:layout_alignEnd="@+id/listEvent"
            android:onClick="onNewArticleClick" />
    </Toolbar>

    

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listEvent"
        android:background="@drawable/bg_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/backArticleButton" />

</RelativeLayout>
