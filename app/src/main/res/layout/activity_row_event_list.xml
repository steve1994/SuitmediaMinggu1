<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.steve.tessuitmediaandroid.rowEventList">

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nama_event"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignWithParentIfMissing="true"
            android:text="nama event"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tanggal_event"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="tanggal event"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/label_event_1"
                android:src="#ffffdb13" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:id="@+id/label_event_2"
                android:src="#ffffdb13" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ipsum aperiam vim ut, ei exerci interesset qui. Unum solum sensibus at eos, latine consequat quo ea. Errem repudiandae nec cu, abhorreant omittantur vis in."
            android:id="@+id/article"
            android:layout_below="@+id/label_event_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_event"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="TODO"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</LinearLayout>
