<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.steve.tessuitmediaandroid.rowEventList">

    <ImageView
        android:id="@+id/image_event"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:contentDescription="TODO"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tanggal_event"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="tanggal event"
        android:textSize="16dp"
        android:layout_below="@+id/nama_event"
        android:layout_alignRight="@+id/nama_event"
        android:layout_alignEnd="@+id/nama_event" />

    <TextView
        android:id="@+id/nama_event"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignWithParentIfMissing="true"
        android:text="nama event"
        android:textSize="16dp"
        android:layout_alignTop="@+id/image_event"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/label_event_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tanggal_event"
        android:layout_alignEnd="@+id/tanggal_event"
        android:layout_below="@+id/tanggal_event"
        android:src="#ffffdb13" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/label_event_2"
        android:layout_below="@+id/tanggal_event"
        android:layout_toRightOf="@+id/tanggal_event"
        android:layout_toEndOf="@+id/tanggal_event"
        android:src="#ffffdb13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Eam ei quando dictas, sit diam eius graeco et. Nam no nostro facilisi interesset, suavitate splendide rationibus mea ad, sed ne feugait."
        android:id="@+id/article"
        android:layout_below="@+id/label_event_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/image_event"
        android:layout_alignRight="@+id/label_event_2"
        android:layout_alignEnd="@+id/label_event_2" />

</RelativeLayout>
