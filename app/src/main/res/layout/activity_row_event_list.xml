<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steve.tessuitmediaandroid.rowEventList">

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/nama_event"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignWithParentIfMissing="true"
            android:text="nama event"
            android:textSize="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tanggal_event"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="tanggal event"
            android:textSize="16dp"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/label_event_1"
                android:text = "Menu 1"
                android:gravity="center"
                android:background="#ffffdb13" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/label_event_2"
                android:text = "Menu 2"
                android:gravity="center"
                android:background="#ffffdb13" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ipsum aperiam vim ut, ei exerci interesset qui. Unum solum sensibus at eos, latine consequat quo ea. Errem repudiandae nec cu, abhorreant omittantur vis in."
            android:id="@+id/article"
            android:layout_below="@+id/label_event_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <ImageView
        android:id="@+id/image_event"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:contentDescription="TODO"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
